                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/man_bold"
                            android:text="Possible Injuries" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
