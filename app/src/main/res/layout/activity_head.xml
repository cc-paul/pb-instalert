                            android:text="Drowned" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/man_reg"
                            android:text="Heart Attack" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/man_reg"
                            android:text="Shortness of Breath" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/man_reg"
                            android:text="Choking" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/man_bold"
                            android:text="Administer the following first-aid steps while waiting for
emergency medical help to arrive
" />

                        <TextView
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/man_reg"
                            android:text="● Open airway by placing one hand on the forehead and the
other 2 fingers under the chin
\n\n● Check for breathing for 10 seconds
\n\n● Clear chest and give 30 compressions with 2 hands, fingers
and elbows locked, hands clasped
\n\n● Close nose, open mouth, breathe into casualty’s mouth,
turn your head and breathe again
\n\n● Repeat until help arrives" />

                        <VideoView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/white"
                            android:id="@+id/vdChest1"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"/>

                        <VideoView
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/white"
                            android:id="@+id/vdChest2"
