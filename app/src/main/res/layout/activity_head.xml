                            android:layout_height="wrap_content"
                            android:fontFamily="@font/man_reg"
                            android:text="ACL" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/man_reg"
                            android:text="Torn meniscus" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/man_reg"
                            android:text="Knee bursitis" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/man_bold"
                            android:text="First aid for knee injuries in the first 48 to 72 hours" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/man_reg"
                            android:text="● Stop your activity immediately. Don’t ‘work through’ the
pain.
\n\n● Rest the joint at first.
\n\n● Reduce pain, swelling and internal bleeding with ice packs,
applied for 15 minutes every couple of hours.
\n\n● Bandage the knee firmly and extend the wrapping down the
lower leg.
\n\n● Elevate the injured leg.
\n\n● Don’t apply heat to the joint.
\n\n● Avoid alcohol, as this encourages bleeding and swelling.
\n\n● Don’t massage the joint, as this encourages bleeding and
swelling.
" />

                        <VideoView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/white"
                            android:id="@+id/vdKnee1"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"/>

                        <LinearLayout
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/man_reg"
                                android:text="Video from : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:onClick="openYoutube"
                                android:fontFamily="@font/man_bold"
                                android:text="SAFESTEPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnFace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/man_bold"
                            android:text="Description" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/man_reg"
                            android:text="The front part of a person's head from the forehead
to the chin
" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/man_reg"
                                android:text="Reference : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:tag="https://www.healthywa.wa.gov.au/Articles/F_I/First-aid-for-sprains-and-strains"
                                android:onClick="getLink"
                                android:fontFamily="@font/man_bold"
                                android:text="HealthyWA"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/man_bold"
                            android:text="Possible Injuries" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/man_reg"
                            android:text="Burn Face" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/man_bold"
                            android:text="Administer the following first-aid steps while waiting for
emergency medical help to arrive" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/man_reg"
                            android:text="● Cool the burn. Hold the area under cool (not cold) running
water for about 10 minutes. If the burn is on the face,
apply a cool, wet cloth until the pain eases. For a mouth
burn from hot food or drink, put a piece of ice in the
mouth for a few minutes.
\n\n● Remove rings or other tight items from the burned area. Try
to do this quickly and gently, before the area swells.
\n\n● Don't break blisters. Blisters help protect against
infection. If a blister does break, gently clean the area
with water and apply an antibiotic ointment.
\n\n● Apply lotion. After the burn is cooled, apply a lotion,
such as one with aloe vera or cocoa butter. This helps
prevent drying and provides relief.
\n\n● Bandage the burn. Cover the burn with a clean bandage. Wrap
it loosely to avoid putting pressure on burned skin.
Bandaging keeps air off the area, reduces pain and protects
blistered skin.
\n\n● If needed, take a nonprescription pain reliever, such as
ibuprofen (Advil, Motrin IB, others), naproxen sodium
(Aleve) or acetaminophen (Tylenol, others).
" />

                        <VideoView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/white"
                            android:id="@+id/vdFace1"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"/>


                        <LinearLayout
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/man_reg"
                                android:text="Video from : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:onClick="openYoutube"
                                android:fontFamily="@font/man_bold"
                                android:text="SAFESTEPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:id="@+id/lnChest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/man_bold"
                            android:text="Description" />

                        <TextView
                            android:layout_width="match_parent"
