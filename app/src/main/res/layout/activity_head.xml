            android:background="#F3F5F9"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lnHead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/man_bold"
                            android:text="Description" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/man_reg"
                            android:text="The upper part of the human body, or the front or
upper part of the body of an animal, typically separated from
the rest of the body by a neck, and containing the brain, mouth,
and sense organs" />

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/man_reg"
                                android:text="Reference : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:tag="https://www.mayoclinic.org/first-aid/first-aid-head-trauma/basics/art-20056626"
                                android:onClick="getLink"
                                android:fontFamily="@font/man_bold"
                                android:text="Mayo Clinic"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/man_bold"
                            android:text="Possible Injuries" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/man_reg"
                            android:text="Head Injury" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/man_reg"
                            android:text="Head Trauma or Bleeding" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/man_bold"
                            android:text="Administer the following first-aid steps while waiting for
emergency medical help to arrive" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/man_reg"
                            android:text="● Keep the person still. The injured person should lie down
with the head and shoulders slightly elevated. Don't move
the person unless necessary, and avoid moving the person's
neck. If the person is wearing a helmet, don't remove it. \n\n
● Stop any bleeding. Apply firm pressure to the wound with
sterile gauze or a clean cloth. But don't apply direct
pressure to the wound if you suspect a skull fracture.\n\n
● Watch for changes in breathing and alertness. If the person
shows no signs of circulation — no breathing, coughing or
movement — begin CPR.
" />

                        <VideoView
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:backgroundTint="@color/white"
                            android:id="@+id/vdHead1"
                            android:layout_width="wrap_content"
                            android:layout_height="200dp"/>


                        <LinearLayout
                            android:layout_marginBottom="20dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/man_reg"
                                android:text="Video from : "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:onClick="openYoutube"
                                android:fontFamily="@font/man_bold"
                                android:text="SAFESTEPS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnArm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
