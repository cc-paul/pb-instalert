<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/lnBorder"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:layout_margin="2dp"
            android:id="@+id/lnHistory"
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <ImageView
                android:padding="8dp"
                android:id="@+id/imgFlow"
                android:src="@drawable/ambulance"
                android:layout_width="50dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvName"
                        android:fontFamily="@font/man_bold"
                        android:text="{{ Request Name }}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="10dp"
                        android:id="@+id/tvDetails"
                        android:fontFamily="@font/man_light"
                        android:text="Mobile: 09085739845   Requested: 2hrs ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:gravity="right"
                        android:layout_marginLeft="2dp"
                        android:textColor="#E91E63"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="10dp"
                        android:id="@+id/tvStatus"
                        android:fontFamily="@font/man_bold"
                        android:text="Responded by Others"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="5dp"
                    android:id="@+id/imgMore"
                    android:src="@drawable/icn_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/vwReceived"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:background="#F3F5F9" />

</LinearLayout>